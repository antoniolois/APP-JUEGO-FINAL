<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smash_topo">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMASH_TOPO.NoActionBar">
        <activity
            android:name=".PlayerClass"
            android:exported="false" />
        <activity
            android:name=".ClasificacionesClass"
            android:exported="false" />
        <activity
            android:name=".MapaJuegoClass"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SMASH_TOPO.NoActionBar" />
        <activity
            android:name=".LoginClass"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SMASH_TOPO.NoActionBar" />
        <activity
            android:name=".MenuClass"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SMASH_TOPO.NoActionBar" />
        <activity
            android:name=".RegistroClass"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SMASH_TOPO.NoActionBar" />
        <activity
            android:name=".SplashClass"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SMASH_TOPO.NoActionBar">
            <intent-filter>

                <!-- ESTAS LINEAS SIRVEN PARA QUE ESTA SEA LA PRIMERA ACTIVIDAD EN EJECUTARSE -->
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SMASH_TOPO.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>